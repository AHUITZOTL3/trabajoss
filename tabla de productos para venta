    private void jMenuItem1ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
try {
         DefaultTableModel tabladet = (DefaultTableModel)     Ventass.jtbventas.getModel();
    String[]  dato=new String[5];
   
    int  fila = jtbventa.getSelectedRow();
    if(fila==-1)
    {
        JOptionPane.showMessageDialog(null, "No  ha seleccionado ningun registro");
    }
    else
    {
        String codins=jtbventa.getValueAt(fila, 0).toString();
        String desins=jtbventa.getValueAt(fila, 1).toString();
        String preins=jtbventa.getValueAt(fila, 5).toString();
        int c=0;
        int j=0;
         String  cant=JOptionPane.showInputDialog("ingrese la cantidad");
        if((cant.equals("")) || (cant.equals("0")))
        {
            JOptionPane.showMessageDialog(this, "Debe ingresar algun valor mayor que 0");
        }
        else
        {
            int canting=Integer.parseInt(cant);
             int comp=Integer.parseInt(comparar(codins));
             if(canting>comp)
             {
                 JOptionPane.showMessageDialog(this,"Ud. no cuenta con la cantidad apropiada");
             }
             else
             {
                   for(int i=0;i<Ventass.jtbventas.getRowCount();i++)
        {
            Object com=Ventass.jtbventas.getValueAt(i,0);
            if(codins.equals(com))
            {
                j=i;
                Ventass.jtbventas.setValueAt(cant, i, 3);
                c=c+1;  
            }
   
        }
        if(c==0)
        {   
            dato[0]=codins;
            dato[1]=desins;
            dato[2]=preins;
            dato[3]=cant;
            
            tabladet.addRow(dato);
        
            Ventass.jtbventas.setModel(tabladet);           
        }
             }
  
        }
   
    }
    } catch (Exception e) {
    }
    }                                          

