    private void jButton7ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
//        this.dispose();
//        Escritorio m=new Escritorio();
//        m.setVisible(true);
//        System.exit(0);
        cerrar();
        confirmarSalida();
    }                                        

    public void cerrar(){
        try {
            this.setDefaultCloseOperation(JFrame.DO_NOTHING_ON_CLOSE);
            addWindowListener(new WindowAdapter(){
                public void windowClosing(WindowEvent e){
                confirmarSalida();
            }
            });
            this.setVisible(true);
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
        public void confirmarSalida(){
            int valor = JOptionPane.showConfirmDialog(this,"Â¿Esta seguro de cerrar la aplicacion?","Advertencia",JOptionPane.YES_NO_OPTION,JOptionPane.WARNING_MESSAGE);
            if(valor == JOptionPane.YES_OPTION){
                JOptionPane.showMessageDialog(null,"Gracias por su visita, Hasta pronto","Gracias",JOptionPane.INFORMATION_MESSAGE);
                System.exit(0);
            }
        }
        
